<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
   xmlns="http://java.sun.com/xml/ns/persistence" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="
      http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
   <persistence-unit name="primary">

      <properties>
         <property name="hibernate.show_sql" value="${debug}"/>
         <property name="hibernate.format_sql" value="false"/>

         <property name="hibernate.cache.use_second_level_cache" value="false"/>
         <property name="hibernate.connection.provider_class" value="no.usit.norex.db.SessionTenantConnectionProvider"/>
         <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>
         <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>


         <property name="jboss.entity.manager.factory.jndi.name" value="java:/norex/emf"/>

      </properties>
   </persistence-unit>
</persistence>
